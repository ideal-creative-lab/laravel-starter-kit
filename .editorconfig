root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{html,antlers.html,blade.php,css,js,svelte,vue,yml,yaml,json}]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

[*.{php,md}]
indent_size = 4
